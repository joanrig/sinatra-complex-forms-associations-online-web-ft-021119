<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <br>
  <label>Name:</label>

  <input type="text" name="pet_name" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <%@owers.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.include?(owner) %>><%=owner.name%>
  <%end%>
  <br>

  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name">
  <br>
  <input type="submit" value="Update Pet">
